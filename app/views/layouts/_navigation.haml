%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", data: {target: "#bs-example-navbar-collapse-1", toggle: "collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if current_user.nil?
        = link_to root_path, class: 'navbar-brand' do
          %span.glyphicon.glyphicon-zoom-in{aria: {hidden: "true"}}
          Deeper look into health.
      - if user_signed_in?
        = link_to root_path, class: 'navbar-brand' do
          %span.glyphicon.glyphicon-zoom-in{aria: {hidden: "true"}}
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li
            = link_to root_path do
              %span.glyphicon.glyphicon-home
              home
          %li
            = link_to users_path do
              %span.glyphicon.glyphicon-user
              users
          %li
            = link_to posts_path do
              %span.glyphicon.glyphicon-file
              posts
          %li
            = link_to descriptions_path do
              %span.glyphicon.glyphicon-list
              descriptions
          %li
            = link_to forem.root_path do
              %span.glyphicon.glyphicon-list
              forums
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{aria: {expanded: false}, data: {toggle: "dropdown"}, href: "#", role: "button"}
              %span.glyphicon.glyphicon-cog
              settings
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              - if user_signed_in?
                %li
                  = link_to edit_user_registration_path do
                    %span.glyphicon.glyphicon-edit
                    edit profile
                %li
                  = link_to destroy_user_session_path do
                    %span.glyphicon.glyphicon-log-out
                    log out
              - else
                %li
                  = link_to new_user_session_path do
                    %span.glyphicon.glyphicon-edit
                    edit
                %li
                  = link_to new_user_registration_path do
                    %span.glyphicon.glyphicon-log-out
                    log out
              %li.divider
              = render 'layouts/layout_menu'

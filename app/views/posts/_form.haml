.container
  = simple_form_for(post, :html => { class: 'form-horizontal' }) do |f|
    = f.error_notification

    -#.form-group
      = f.label :title, class: 'control-label'
      .col-sm-4= f.text_field :title, placeholder: 'title', class: 'form-control'
      .col-sm-4= f.text_field :body, placeholder: 'body', class: 'form-control'
      .col-sm-4= f.text_field :title, placeholder: 'Title', class: 'form-control'
      .col-sm-4= f.text_field :title, placeholder: 'Title', class: 'form-control'
      .col-sm-4= f.text_field :title, placeholder: 'Title', class: 'form-control'
      .col-sm-4= f.text_field :title, placeholder: 'Title', class: 'form-control'

    .form-inputs
      = f.input :title
      = f.input :body
      = f.input :time, as: :datetime
      = f.input :pain_level, collection: 0..10
      = f.input :comments, as: :text
      = f.input :meds, as: :text
      = f.input :non_drugs, as: :text
      = f.association :descriptions, as: :check_boxes

    .form-actions
      = f.button :submit

.container-fluid
  .row
    .col-xs-12.col-md-8
      = simple_form_for(post, :html => { class: 'form-horizontal' }) do |f|
        = f.error_notification

        = f.input :title
        = f.input :body
        = f.input :time, as: :datetime
        = f.input :pain_level, collection: 0..10
        = f.input :comments, as: :text
        = f.input :meds, as: :text
        = f.input :non_drugs, as: :text
        = f.association :descriptions, as: :check_boxes, collection: Description.all
        = f.association :bodypart, as: :select

        .form-actions
          = f.button :submit, class: 'btn btn-success'
          = link_to posts_path, class: 'btn btn-default pull-right' do
            %span.glyphicon.glyphicon-remove{"aria-hidden" => "true"}
            Discard

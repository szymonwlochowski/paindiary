%h1 List of your descriptions
= link_to new_description_path, class: 'btn btn-primary' do
  %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
  New description
%br
%br
%row
  - descriptions.each do |d|
    %p
      = d.name
      - if current_user.forem_admin? || d.user_id == current_user.id
        = link_to edit_description_path(d), class: 'btn btn-info btn-xs' do
          %span.glyphicon.glyphicon-edit{"aria-hidden" => "true"}
          edit
        = link_to description_path(d), class: 'btn btn-danger btn-xs', method: :delete do
          %span.glyphicon.glyphicon-remove{"aria-hidden" => "true"}
          delete

= link_to new_description_path, class: 'btn btn-default' do
  Default
= link_to new_description_path, class: 'btn btn-primary' do
  Primary
= link_to new_description_path, class: 'btn btn-success' do
  Success
= link_to new_description_path, class: 'btn btn-info' do
  Info
= link_to new_description_path, class: 'btn btn-warning' do
  Warning
= link_to new_description_path, class: 'btn btn-danger' do
  Danger
